<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/material_dynamic_neutral_variant80"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="36dp"
    tools:context=".LoginActivity">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/foo_logo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELAMAT DATANG"
            android:textStyle="bold"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Silahkan Login Terlebih Dahulu"
            android:textSize="16sp"
            android:layout_marginBottom="36dp"/>

        <EditText
            android:id="@+id/login_username"
            android:layout_marginLeft="10px"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:drawableLeft="@drawable/baseline_people_alt_24"
            android:paddingLeft="20dp"
            android:layout_margin="8dp"
            android:drawablePadding="15dp"
            android:hint="Username"
            android:background="@drawable/round_edit_text" />


        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="8dp"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:background="@drawable/round_edit_text"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/baseline_remove_red_eye_24"
            android:layout_marginLeft="25dp"
            android:hint="Password" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="36dp"
            android:layout_marginHorizontal="24dp"
            android:backgroundTint="@color/orange_login"
            android:text="LOGIN"
            android:background="@drawable/round_edit_text"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/openRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Belum Mempunyai akun? Daftar sekarang!"
            android:textColorHighlight="#177CF9"
            android:textColorLink="@color/orange_login"
            android:textSize="15sp"/>
        
</LinearLayout>