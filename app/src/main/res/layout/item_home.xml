<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:layout_gravity="start"
            android:layout_marginEnd="16dp"
            tools:srcCompat="@tools:sample/avatars"/>

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_gravity="start"
            tools:text="username"/>

        <TextView
            android:id="@+id/userContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000"
            android:layout_marginTop="8dp"
            tools:text="In publishing and graphic design, Lorem ipsum is a placeholder text."/>

        <ImageView
            android:id="@+id/mainImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            tools:src="@drawable/gambar_tentor_mengajar" />

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_fav_24"
            android:backgroundTint="@color/orange_login"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>